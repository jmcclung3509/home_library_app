<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

    <body>
        <div class="navigation">
            <%- include('partials/nav.ejs') %>
        </div>
        <div class="container">
            <div class="messages">
                <% const messages=getMessages() %>
                    <div class="success">
                        <% if (messages.success) { %>
                            <% messages.success.forEach((elem)=> { %>
                                <div class="alert alert-sucess alert-dismissible" role="alert">
                                    <%= elem %>
                                </div>
                                <% }) %>
                                    <% } %>
                    </div>
                    <div class="fail">
                        <% if (messages.fail) { %>
                            <% messages.fail.forEach((elem)=> { %>
                                <div class="alert alert-fail alert-dismissible" role="alert">
                                    <%= elem %>
                                </div>
                                <% }) %>
                                    <% } %>
                    </div>
            </div>
        </div>
        <div class="container">
            <% if(data.length==0){ %>
                <h4 class="text-muted"> There are no books in your library</h4>

                <a href="/books/add-book/" class="btn btn-primary">Add Books</a>
                <% } %>
                    <h2> Books in your library</h2>
                    <div class="row">
                        <% data.forEach((book)=> { %>
                            <div class="col col-12 col-md-6 col-lg-4">
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%= book.bookName %>
                                        </h4>
                                        <div class="item">
                                            <h6 class="card-subtitle mb-2 "><strong> Author: </strong> </h6>
                                            <h6>
                                                <%= book.author %>
                                            </h6>
                                        </div>
                                        <div class="item">
                                            <h6 class="card-subtitle mb-2 "> <strong>Page Count:</strong></h6>
                                            <h6>
                                                <%= book.pageCount %> pages
                                            </h6>
                                        </div>
                                        <div class="item">
                                            <h6 class="card-subtitle mb-2 "><strong> Genre: </strong></h6>
                                            <h6>
                                                <%= book.genre %>
                                            </h6>
                                        </div>
                                        <div class="item">
                                            <h6 class="card-subtitle mb-2"><strong> Location: </strong></h6>
                                            <h6>
                                                <%= book.location %>
                                            </h6>
                                        </div>
                                        <div class="item">
                                            <h6 class="card-subtitle mb-2 "><strong> Added: </strong></h6>
                                            <h6>
                                                <%=new Date().getMonth() + 1%>/<%= new Date().getDate() %>/<%=new
                                                            Date().getFullYear()%>
                                            </h6>
                                        </div>




                                        <h6 class="card-text"><strong>Description: </strong></h6>
                                        <p>
                                            <%= book.description %>
                                        </p>
                                        <div class="bottom-item">
                                            <span class="badge text-bg-secondary">
                                                <%= book.status %>
                                            </span>
                                            <a href="/books/delete/<%= book.id %>"
                                                class="card-link link-danger">Delete</a>
                                            <a href="/books/edit/<%= book.id %>" class="card-link ">Edit</a>
                                        </div>
                                        <!-- <a href="#" class="card-link">Card link</a>
                  <a href="#" class="card-link">Another link</a> -->
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
        </div>



        <!-- <%=JSON.stringify(data) %> -->


    </body>
    <style>
        body {
            background-color: #3E342E;
        }

        .bg-light {
            background-color: #918982 !important;
        }

        h2 {
            margin-bottom: 40px;
            color: #DFDEDA;
        }

        .navigation {
            margin-bottom: 50px;
        }

        .navbar {
            padding: 20px;

        }



        .container {
            margin-top: 50px;

        }



        .card {
            min-height: 350px;
            height: fit-content;
            margin-bottom: 50px;
            background-color: #DFDEDA;
            margin-left: auto;
            margin-right: auto;
        }

        .card-title {
            margin-bottom: 25px;
            text-align: center;
        }

        .item {
            display: flex;
            justify-content: space-between;
            text-align: center;
        }

        .badge {
            margin-right: 15px;
        }

        .alert {
            background-color: rgb(220, 240, 247);
        }

        .card-link {
            background-color: #DFDEDA;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn {
            margin: 20px;

        }

        .bottom-item {
            display: flex;
            justify-content: flex-start;
            gap: 10px;
        }
    </style>

</html>